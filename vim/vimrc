augroup markdown_language_client_commands
  autocmd!
  autocmd WinLeave __LanguageClient__ ++nested call <SID>fixLanguageClientHover()
augroup END

function! s:fixLanguageClientHover()
  setlocal modifiable
  setlocal conceallevel=2
  normal i
  setlocal nonu nornu
  setlocal nomodifiable
endfunction
