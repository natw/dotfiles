scriptencoding utf-8

source ~/.vim/plugins.vim

set runtimepath+=$GOROOT/misc/vim
syntax on
filetype plugin indent on
colorscheme railscasts

runtime functions.vim
runtime options.vim
runtime mappings.vim
runtime plugin_options.vim

