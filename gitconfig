[alias]
    st = status
    lg = log --graph --all --abbrev-commit
    lt = !git lg -15
    co = checkout
    dif = diff
    dc = diff --cached
    aa = add --all
    mom = merge origin/master
    fe = fetch
    ci = commit
    aap = add . -p
    pom = pull origin master
    pum = pull upstream master
    unmerged = branch --no-merge
    r = remote -v
    bv = branch -vv
    pt = !git push && git push --tags
    pr = pull-request
    om = !git diff --name-only | uniq | xargs -o vim
    ff = merge --ff-only
    yesterday = log --graph --all --abbrev-commit --since=yesterday --before=0am

    gh-url = !echo "https://github.com/$(git remote show -n origin | grep Fetch | cut -d ":" -f 3 | cut -d "." -f 1)"
    gh = !open $(git gh-url)
    pr = !open $(git gh-url)/compare/LiveWatch:master...LiveWatch:$(git branch --no-color | grep '*' | cut -d ' ' -f 2)?expand=1

[format]
    pretty = format:%C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr) %C(bold blue)<%an>%Creset

[color]
    diff = true
    status = true
    branch = auto

[color "branch"]
    upstream = bold blue

[merge]
    tool = vimdiff

[core]
    pager = less -XFRS -x2

[push]
    default = simple

[merge]
	conflictstyle = diff3

; [rerere]
	; enabled = 1

[fetch]
    prune = true
